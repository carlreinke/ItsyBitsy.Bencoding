<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Version>1.0.0-preview</Version>
    <Authors>Carl Reinke</Authors>
    <Description>Bencode encoders and decoders.</Description>
    <Copyright>2019 Carl Reinke</Copyright>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageProjectUrl>https://bitbucket.org/carlreinke/ItsyBitsy.Bencoding</PackageProjectUrl>
    <RepositoryUrl>https://bitbucket.org/carlreinke/ItsyBitsy.Bencoding</RepositoryUrl>
    <RepositoryType>hg</RepositoryType>
    <PackageTags>bencode;bencoding</PackageTags>
    <NeutralLanguage>en-US</NeutralLanguage>

    <LangVersion>7.3</LangVersion>
    <Features>strict</Features>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DocumentationFile>bin\Debug\netstandard2.0\ItsyBitsy.Bencoding.xml</DocumentationFile>
    <CodeAnalysisRuleSet>ItsyBitsy.Bencoding.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard2.0\ItsyBitsy.Bencoding.xml</DocumentationFile>
    <CodeAnalysisRuleSet>ItsyBitsy.Bencoding.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeQuality.Analyzers" Version="2.6.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.NetCore.Analyzers" Version="2.6.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="System.Memory" Version="4.5.2" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
